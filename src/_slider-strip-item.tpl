<div class="slider-strip-item@@if(context.src){ has-bg}"@@if(context.title){ data-title="@@title"}@@if(context.src){ style="background-image: url(@@src);"}>
	<div class="slider-strip-item__content">
		<time class="slider-strip-item__date" datetime="@@datetime">@@date</time>
		<div class="slider-strip-item__title"><a href="#">@@title</a></div>
	</div>
	<div class="slider-strip-item__footer">
		<div class="slider-strip-item__source"><a href="@@link">@@link</a></div>
	</div>
</div>
